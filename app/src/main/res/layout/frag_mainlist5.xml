<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/context_font"
                android:padding="10dp"
                android:text="상품명 : "
                android:textSize="15sp"
                android:layout_weight="0.3"/>

            <TextView
                android:id="@+id/product_name5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/context_font"
                android:layout_marginRight="10dp"
                android:paddingRight="25dp"
                android:text="이것은 기본입니다."
                android:textSize="15sp"
                android:layout_weight="0.8"
                android:gravity="right"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/context_font"
                android:padding="10dp"
                android:text="상품종류 : "
                android:textSize="15sp"
                android:layout_weight="0.2"/>

            <TextView
                android:id="@+id/product_cat5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/context_font"
                android:layout_marginRight="10dp"
                android:paddingRight="25dp"
                android:text="이것은 기본입니다."
                android:textSize="15sp"
                android:layout_weight="0.8"
                android:gravity="right"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/context_font"
                android:padding="10dp"
                android:text="등급 : "
                android:textSize="15sp"
                android:layout_weight="0.4"/>

            <TextView
                android:id="@+id/product_grade5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/context_font"
                android:layout_marginRight="10dp"
                android:paddingRight="25dp"
                android:text="이것은 기본입니다."
                android:textSize="15sp"
                android:layout_weight="0.8"
                android:gravity="right"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/context_font"
                android:padding="10dp"
                android:text="단위 : "
                android:textSize="15sp"
                android:layout_weight="0.4"/>

            <TextView
                android:id="@+id/product_unit5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/context_font"
                android:layout_marginRight="10dp"
                android:paddingRight="25dp"
                android:text="이것은 기본입니다."
                android:textSize="15sp"
                android:layout_weight="0.8"
                android:gravity="right"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/context_font"
                android:padding="10dp"
                android:text="가격 : "
                android:textColor="#ff3333"
                android:textSize="15sp"
                android:layout_weight="0.4"/>

            <TextView
                android:id="@+id/product_price5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/context_font"
                android:layout_marginRight="10dp"
                android:paddingRight="25dp"
                android:text="이것은 기본입니다."
                android:textColor="#ff3333"
                android:textSize="15sp"
                android:layout_weight="0.8"
                android:gravity="right"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/context_font"
                android:padding="10dp"
                android:text="전일대비 : "
                android:textColor="#ff3333"
                android:textSize="15sp"
                android:layout_weight="0.2"/>

            <TextView
                android:id="@+id/product_vs5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/context_font"
                android:layout_marginRight="10dp"
                android:paddingRight="25dp"
                android:text="이것은 기본입니다."
                android:textColor="#ff3333"
                android:textSize="15sp"
                android:layout_weight="0.8"
                android:gravity="right"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/context_font"
                android:padding="10dp"
                android:text="조사날짜 : "
                android:textSize="15sp"
                android:layout_weight="0.2"/>

            <TextView
                android:id="@+id/product_date5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/context_font"
                android:layout_marginRight="10dp"
                android:paddingRight="25dp"
                android:text="이것은 기본입니다."
                android:textSize="15sp"
                android:layout_weight="0.8"
                android:gravity="right"/>
        </TableRow>

        <androidx.cardview.widget.CardView
            android:id="@+id/main_cardView5"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="20dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/main_recipe_img5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius_top_left="20dp"
                    app:riv_corner_radius_top_right="20dp"
                    app:riv_border_color="#333333"
                    app:riv_mutate_background="true"
                    app:riv_oval="false"/>

                <TextView
                    android:id="@+id/main_recipe_id5"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="레시피 번호"
                    android:textSize="7sp"
                    android:fontFamily="@font/context_font"/>


                <TextView
                    android:id="@+id/main_recipe_name5"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="레시피 이름"
                    android:textSize="15sp"
                    android:fontFamily="@font/context_font"/>

                <TextView
                    android:id="@+id/main_recipe_info5"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="레시피 상세설명"
                    android:textSize="10sp"
                    android:fontFamily="@font/context_font"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>